<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalActivity">

    <TextView
        android:id="@+id/txt_title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/title_farm"
        android:background="@color/red"
        android:fontFamily="sans-serif-medium"
        android:gravity="bottom|left"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:layout_margin="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_chicken"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/square_red_box"
                android:padding="1.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/chicken" />

            <ImageView
                android:id="@+id/img_goat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/square_red_box"
                android:padding="1.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/goat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_sheep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/square_red_box"
                android:padding="1.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/sheep" />

            <ImageView
                android:id="@+id/img_cow"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/square_red_box"
                android:padding="1.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/cow" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>